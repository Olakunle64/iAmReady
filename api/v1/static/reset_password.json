{
    "paths": {
      "/reset_password": {
        "post": {
          "tags": ["Authentication"],
          "summary": "Request password reset token",
          "parameters": [
            {
              "in": "body",
              "name": "body",
              "required": true,
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  }
                }
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Password reset token sent successfully",
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "reset_token": {
                    "type": "string"
                  }
                }
              }
            },
            "400": {
              "description": "Missing attribute: email",
              "schema": {
                "$ref": "#/definitions/Error"
              }
            },
            "404": {
              "description": "User not found",
              "schema": {
                "$ref": "#/definitions/Error"
              }
            }
          }
        },
        "put": {
          "tags": ["Authentication"],
          "summary": "Update user's password",
          "parameters": [
            {
              "in": "body",
              "name": "body",
              "required": true,
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "reset_token": {
                    "type": "string"
                  },
                  "new_password": {
                    "type": "string"
                  }
                },
                "required": ["email", "reset_token", "new_password"]
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Password updated successfully",
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "message": {
                    "type": "string"
                  }
                }
              }
            },
            "404": {
              "description": "Invalid reset token",
              "schema": {
                "$ref": "#/definitions/Error"
              }
            }
          }
        }
      }
    },
    "definitions": {
      "Error": {
        "type": "object",
        "properties": {
          "error": {
            "type": "string"
          }
        }
      }
    }
  }
  